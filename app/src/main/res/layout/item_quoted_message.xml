<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_item_dark"
    android:padding="8dp">

    <View
        android:id="@+id/reply_indicator_view"
        android:layout_width="4dp"
        android:layout_height="0dp"
        android:background="@color/neon_cyan"
        app:layout_constraintTop_toTopOf="@+id/tv_quoted_author"
        app:layout_constraintBottom_toBottomOf="@+id/tv_quoted_text"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_quoted_author"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/neon_cyan"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/reply_indicator_view"
        app:layout_constraintEnd_toStartOf="@+id/iv_quoted_gif"
        tools:text="Author Nickname" />

    <TextView
        android:id="@+id/tv_quoted_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@+id/tv_quoted_author"
        app:layout_constraintStart_toEndOf="@id/reply_indicator_view"
        app:layout_constraintEnd_toStartOf="@+id/iv_quoted_gif"
        tools:text="This is the text of the message being replied to." />

    <LinearLayout
        android:id="@+id/quoted_voice_message_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/tv_quoted_author"
        app:layout_constraintStart_toEndOf="@id/reply_indicator_view"
        app:layout_constraintEnd_toStartOf="@+id/iv_quoted_gif">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_mic"/>

        <TextView
            android:id="@+id/tv_quoted_voice_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="@android:color/white"
            tools:text="0:15"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_quoted_gif"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_cancel_reply"/>

    <ImageButton
        android:id="@+id/btn_cancel_reply"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_close"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:tint="@color/neon_cyan"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>