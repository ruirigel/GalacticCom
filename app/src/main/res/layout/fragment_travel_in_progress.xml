<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".TravelInProgressFragment">

    <com.rmrbranco.galacticcom.StarrySkyView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Intergalactic Animation View -->
    <ImageView
        android:id="@+id/galaxy_logo_travel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logotipo"
        android:alpha="0.0"
        android:scaleX="0.001"
        android:scaleY="0.001"
        app:tint="@color/neon_cyan"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/traveling_galaxy_logo_description" />

    <!-- Interplanetary Animation Views (Initially Gone or Invisible) -->
    <ImageView
        android:id="@+id/planet"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/planet"
        android:alpha="0.0"
        android:scaleX="0.01"
        android:scaleY="0.01"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/moon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/moon" 
        android:alpha="0.0"
        android:scaleX="0.01"
        android:scaleY="0.01"
        android:translationX="1dp"
        android:translationY="-1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/travel_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        android:text="@string/traveling_status"
        android:textColor="@color/neon_cyan"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_boost_travel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Boost Travel (Watch Ad) -50%"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>