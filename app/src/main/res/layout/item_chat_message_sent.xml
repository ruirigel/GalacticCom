<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="64dp"
    android:paddingEnd="8dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:clipToPadding="false">

    <LinearLayout
        android:id="@+id/ll_message_bubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@drawable/bg_sent_bubble_curved"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:paddingTop="10dp"
        android:paddingEnd="18dp"
        android:paddingBottom="12dp">

        <LinearLayout
            android:id="@+id/quoted_message_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_item_dark"
            android:padding="8dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_quoted_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/neon_cyan"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_quoted_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:textColor="@android:color/white"/>

                <LinearLayout
                    android:id="@+id/quoted_voice_message_container_bubble"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_mic"
                        android:contentDescription="@string/mic_icon_description" />

                    <TextView
                        android:id="@+id/tv_quoted_voice_duration_bubble"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:textColor="@android:color/white"/>
                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_quoted_gif_in_bubble"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:visibility="gone"
                android:contentDescription="@string/quoted_gif_description"
                android:layout_marginStart="8dp"/>

        </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_chat_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:visibility="gone"
                android:contentDescription="@string/chat_image_description" />

            <ImageView
                android:id="@+id/iv_chat_gif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:visibility="gone"
                android:contentDescription="@string/chat_gif_description" />

            <LinearLayout
                android:id="@+id/voice_message_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:visibility="gone">

                <ImageButton
                    android:id="@+id/btn_play_voice_message"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_play_arrow"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/play_voice_message_description" />

                <SeekBar
                    android:id="@+id/seekbar_voice_message"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_voice_message_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/neon_cyan"
                    android:textSize="12sp"/>
            </LinearLayout>

            <ProgressBar
                android:id="@+id/pb_media_loading"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"/>

        </FrameLayout>

        <TextView
            android:id="@+id/tv_chat_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sent_message_placeholder"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_chat_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/timestamp_placeholder"
                android:textColor="@color/neon_cyan"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_message_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_item_dark"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:text="@string/edited_status"
                android:textColor="@color/neon_cyan"
                android:textSize="10sp"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
