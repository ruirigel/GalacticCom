<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_bottom_sheet_neon"
    android:padding="16dp">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transmission Log"
        android:textColor="@color/neon_cyan"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp" />

    <!-- Catastrophe Warning -->
    <TextView
        android:id="@+id/dialog_catastrophe_warning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/material_red_500"
        android:textSize="12sp"
        android:textStyle="bold"
        android:visibility="gone"
        android:layout_marginBottom="8dp"
        tools:text="STATUS: SIGNAL CORRUPTED"
        tools:visibility="visible"/>

    <!-- Content Line: Label + Subject (Truncated Binary) + Timestamp -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="top">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subject:"
            android:textColor="@color/neon_cyan"
            android:textSize="16sp"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/dialog_subject_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginEnd="8dp"
            tools:text="0101010101..." />

        <TextView
            android:id="@+id/dialog_message_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            tools:text="Yesterday" />

    </LinearLayout>

    <!-- Footer Line: To Galaxy + Status -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/dialog_message_destination"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/neon_cyan"
            android:textSize="16sp"
            android:layout_marginEnd="8dp"
            tools:text="to: Andromeda" />

        <TextView
            android:id="@+id/dialog_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            tools:text="ARRIVING IN: 01:23" />

    </LinearLayout>

    <!-- Full Decrypted Message Content -->
    <TextView
        android:id="@+id/dialog_full_decrypted_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:lineSpacingExtra="4dp"
        tools:text="Msg: Hello Galaxy, this is a test message..." />

</LinearLayout>