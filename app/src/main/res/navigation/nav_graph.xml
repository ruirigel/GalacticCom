<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.rmrbranco.galacticcom.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_login_to_register"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_login_to_home"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.rmrbranco.galacticcom.RegisterFragment"
        android:label="Register"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_register_to_home"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_register_to_login"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.rmrbranco.galacticcom.HomeFragment"
        android:label="Comms"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_home_to_conversation"
            app:destination="@id/conversationFragment" />
        <action
            android:id="@+id/action_home_to_travel"
            app:destination="@id/travelInProgressFragment" />
        <action
            android:id="@+id/action_home_to_pirate_store"
            app:destination="@id/pirateStoreFragment" />
    </fragment>

    <fragment
        android:id="@+id/composeFragment"
        android:name="com.rmrbranco.galacticcom.ComposeDeepSpaceFragment"
        android:label="Send"
        tools:layout="@layout/fragment_compose"/>

    <fragment
        android:id="@+id/inboxFragment"
        android:name="com.rmrbranco.galacticcom.InboxFragment"
        android:label="Inbox"
        tools:layout="@layout/fragment_inbox">
        <action
            android:id="@+id/action_inbox_to_conversation"
            app:destination="@id/conversationFragment" />
    </fragment>

    <fragment
        android:id="@+id/conversationFragment"
        android:name="com.rmrbranco.galacticcom.ConversationFragment"
        android:label="Conversation"
        tools:layout="@layout/fragment_conversation">
        <argument
            android:name="recipientId"
            app:argType="string" />
        <argument
            android:name="conversationId"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
        <argument
            android:name="isPrivate"
            app:argType="boolean"
            android:defaultValue="false" />
        <argument
            android:name="originalMessageId"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
        <argument
            android:name="originalGalaxyName"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
        <action
            android:id="@+id/action_conversation_to_settings"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/action_conversationFragment_to_userProfileDialogFragment"
            app:destination="@id/userProfileDialogFragment" />
    </fragment>

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.rmrbranco.galacticcom.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings">
        <action
            android:id="@+id/action_settings_to_userProfile"
            app:destination="@id/userProfileDialogFragment" />
    </fragment>
    
    <fragment
        android:id="@+id/interplanetaryTravelFragment"
        android:name="com.rmrbranco.galacticcom.InterplanetaryTravelFragment"
        android:label="Traveling..."
        tools:layout="@layout/fragment_interplanetary_travel">
        <action
            android:id="@+id/action_interplanetary_travel_to_settings"
            app:destination="@id/settingsFragment"
            app:popUpTo="@id/interplanetaryTravelFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="currentUserGalaxy"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/galaxyDirectoryFragment"
        android:name="com.rmrbranco.galacticcom.GalaxyDirectoryFragment"
        android:label="Cosmos"
        tools:layout="@layout/fragment_galaxy_directory">
        <action
            android:id="@+id/action_galaxyDirectory_to_travelInProgress"
            app:destination="@id/travelInProgressFragment" />
    </fragment>

    <fragment
        android:id="@+id/systemFragment"
        android:name="com.rmrbranco.galacticcom.SystemFragment"
        android:label="System"
        tools:layout="@layout/fragment_system">
        <action
            android:id="@+id/action_system_to_travelInProgress"
            app:destination="@id/travelInProgressFragment" />
    </fragment>

    <fragment
        android:id="@+id/travelInProgressFragment"
        android:name="com.rmrbranco.galacticcom.TravelInProgressFragment"
        android:label="Traveling..."
        tools:layout="@layout/fragment_travel_in_progress">
        <argument
            android:name="completion_timestamp"
            app:argType="long" />
        <argument
            android:name="currentUserGalaxy"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
        <argument
            android:name="targetGalaxy"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>
    
    <dialog
        android:id="@+id/userProfileDialogFragment"
        android:name="com.rmrbranco.galacticcom.UserProfileDialogFragment"
        android:label="User Profile"
        tools:layout="@layout/dialog_public_profile">
        <argument
            android:name="userId"
            app:argType="string" />
    </dialog>

    <fragment
        android:id="@+id/pirateStoreFragment"
        android:name="com.rmrbranco.galacticcom.ui.pirate.PirateStoreFragment"
        android:label="Mercadorias Raras"
        tools:layout="@layout/fragment_pirate_store" />

</navigation>